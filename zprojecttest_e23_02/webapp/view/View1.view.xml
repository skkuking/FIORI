<mvc:View controllerName="C05.zprojectteste2302.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core">    <!--컨트롤들의 소속을 나타내는 접두사들의 ALIAS를 정의함. 길게 안쓰고 ALIAS 쓰면 됨 -->

    <Page id="page" title="{i18n>title}">
        <content >
            <l:VerticalLayout>

                <Input id="idInput" placeholder="입력창" submit="onSubmit" />  <!-- //컨트롤의 id 정하고, 이벤트의 이름 정해줌.-->
                <Text id="idText"  />

            </l:VerticalLayout>
            
            <l:VerticalLayout class ="sapUiContentPadding">
                <Input type="Text" id='idInput1'/>
                <Select width="100%" id='idSelect1'>
                <core:Item  key="plus" text="+"/>
                <core:Item  key="minus" text="-"/>
                <core:Item  key="multiply" text="*"/>
                <core:Item  key="divide" text="/"/>
                </Select>
                <Input type="Text" id='idInput2'/>
                <Button width="100%" text="Calc" type="Emphasized" press="onBtnPress"/>
            </l:VerticalLayout> 

        </content>
    </Page>
</mvc:View>
