<mvc:View controllerName="nt.zprojectodatae2303.controller.Main"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.uxap"
	xmlns:core='sap.ui.core'
	xmlns:m="sap.m"
	xmlns:l="sap.ui.layout"
	height="100%">
	<ObjectPageLayout
		id="ObjectPageLayout"
		upperCaseAnchorBar="false"
		useIconTabBar="true">

		<headerTitle>
			<ObjectPageHeader objectTitle="Section Sample">
				<actions>
					<ObjectPageHeaderActionButton
						icon="sap-icon://inspection"
						text='Search'
						hideText="false"
						press='onSearch'
						type='Emphasized'
					/>
				</actions>
			</ObjectPageHeader>
		</headerTitle>

		<headerContent>
			<m:ObjectAttribute title="" text="헤더 컨텐츠" />

			<l:Grid containerQuery="true"
				defaultSpan="XL2 L4 M6 S12">

				<m:VBox>
					<m:Label text="Order ID" />
					<m:Input id="idOrderID" />

					<!-- type="Number" 
						valueState="Error"
						valueStateText="Error Message!!!!!!!" -->

				</m:VBox>

				<m:VBox>
					<m:Label text="Order Date" />
					<m:DatePicker
						id="idOrderDate"
						displayFormat='yyyy-MM-dd'
						valueFormat="yyyyMMdd" />
				</m:VBox>

				<m:VBox>
					<m:Label text="Label3" />
					<m:Input />
				</m:VBox>

				<m:VBox>
					<m:Label text="Label4" />
					<m:Input />
				</m:VBox>

				<m:VBox>
					<m:Label text="Label5" />
					<m:Input />
				</m:VBox>

				<m:VBox>
					<m:Label text="Label6" />
					<m:Input />
				</m:VBox>

			</l:Grid>
		</headerContent>

		<sections>

			<ObjectPageSection titleUppercase="false" title="Section 3">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<!-- <m:Text text='Content 1.3'/> -->
							<!-- sap.m.Table  /Products-->
							<m:Table id="idProductsTable"
								inset="false"
								items="{/Orders}"
								>

								<!-- "{
										path : '/Products',
										filters : [{
											path : 'UnitsOnOrder',
											operator : 'NE',
											value1 : '0'
											},
											{
											path : 'ProductName',
											operator : 'Contains',
											value1 : 'C'
											}],
										sorter : [
											{
											path : 'UnitsInStock',
											descending : false
											},
											{
											path : 'UnitsOnOrder',
											descending : false
											}
											]
										}" -->

								<m:headerToolbar>
									<m:OverflowToolbar>
										<m:content>
											<m:Title text="Orders" level="H2" />
											<m:ToolbarSpacer />

										</m:content>
									</m:OverflowToolbar>
								</m:headerToolbar>

								<m:columns>
									<m:Column>
										<m:ObjectIdentifier text="OrderID" />
									</m:Column>

									<m:Column>
										<m:Text text="CustomerID" />
									</m:Column>

									<m:Column>
										<m:Text text="OrderDate" />
									</m:Column>

									<m:Column>
										<m:Text text="RequiredDate" />
									</m:Column>

									<m:Column>
										<m:Text text="ShippedDate" />
									</m:Column>

									<!-- <m:Column>
											<m:Text text="Custom Sum" />
										</m:Column>	

										<m:Column>
											<m:Text text="Result" />
										</m:Column>	 -->

								</m:columns>

								<m:items>
									<m:ColumnListItem vAlign="Middle">
										<m:cells>
											<m:Text text="{OrderID}" />
											<m:Text text="{CustomerID}" />
											<m:Text
												text="{
													path : 'OrderDate' ,
													formatter : '.formatter.dateTime'
													}" />
											<m:Text
												text="{
													path : 'RequiredDate',
													formatter : '.formatter.dateTime'}" />
											<m:Text
												text="{
													path : 'ShippedDate',
													formatter : '.formatter.dateTime'}" />

											<!-- 두개 이상의 필드를 바인딩 해보기 -->
											<!-- <m:Text text="{UnitsInStock} and {UnitsOnOrder}"   /> -->
											<!-- <m:Text text="{
													parts : [
														{ path : 'UnitsInStock'} ,
														{ path : 'UnitsOnOrder'}
													] ,
													formatter : '.formatter.onSum'
												}"  /> -->
											<!-- <core:Icon src='sap-icon://circle-task-2'
											color="#8041D9"/> -->
											<!-- 색 바꿔보기 -->
											<!-- <core:Icon src='sap-icon://circle-task-2' 
												color="{= (${UnitsInStock} + ${UnitsOnOrder}) &lt; 50 ? '#47C83E' : '#CC3D3D' }"/> -->
											<!-- <m:Text text="{= ${UnitsInStock} + ${UnitsOnOrder}
											}" 
													visible = "{ = 
													( ${UnitsInStock} + ${UnitsOnOrder}) &lt; 50 ? false : true
													}"/> -->
										</m:cells>
									</m:ColumnListItem>
								</m:items>

							</m:Table>
						</blocks>
					</ObjectPageSubSection>

				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="Section 4">
				<subSections>
					<ObjectPageSubSection titleUppercase="false">
						<blocks>
							<m:Text text='test' />
						</blocks>
					</ObjectPageSubSection>

				</subSections>
			</ObjectPageSection>

		</sections>

	</ObjectPageLayout>
</mvc:View>